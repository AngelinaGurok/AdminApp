<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    tools:context=".AddRoute">

    <MultiAutoCompleteTextView
        android:id="@+id/DeparturePText"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="192dp"
        android:layout_marginBottom="10dp"
        android:hint="Departure"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ArrivalPText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <MultiAutoCompleteTextView
        android:id="@+id/ArrivalPText"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="13dp"
        android:hint="Arrival point"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <EditText
        android:id="@+id/DepTimeText"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="5dp"
        android:ems="10"
        android:hint="00:00"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ArrivalTimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toEndOf="@+id/DeparturePText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <EditText
        android:id="@+id/ArrivalTimeText"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="00:00"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/DepTimeText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ArrivalPText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="148dp"
        android:layout_height="69dp"
        android:text="Add"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <EditText
        android:id="@+id/SeatsAmountText"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Seats"
        android:inputType="number"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/ArrivalTimeText"
        app:layout_constraintStart_toStartOf="@+id/ArrivalTimeText"
        app:layout_constraintTop_toBottomOf="@+id/ArrivalTimeText" />

    <TextView
        android:id="@+id/DateText"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:hint="Date"
        android:paddingStart="3dp"
        android:paddingTop="10dp"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/ArrivalPText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ArrivalPText"
        app:layout_constraintTop_toBottomOf="@+id/ArrivalPText" />

    <EditText
        android:id="@+id/PriceText"
        android:layout_width="238dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/AddButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SeatsAmountText"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>